<view class="box">
  <!-- 背景图片 -->
  <!-- <view>
    <image class="background" src="https://down.52pk.com/uploads/litimg/181203/141R250392959.gif"></image>
  </view> -->
  <!-- 搜索框 -->
  <view class="search">
    <icon class="search_img" type="search" size="23"></icon>
    <input placeholder="请输入搜索关键字" type="text"></input>
    <icon type="clear" size="23" class="clear"></icon>
  </view>
  <!-- 顶层轮播图 -->
  <view class='container'>
    <swiper style="display: flex;flex-direction: column;justify-content: center;align-items: center;overflow:unset;width:100%;height:360rpx;margin:5rpx;" bindchange="changeSwiper" previous-margin="150rpx" next-margin="150rpx" circular="true" autoplay="true" interval="2000">
      <block wx:for="{{imgList}}" wx:key>
        <swiper-item class=" {{currentIndex == index ? 'swiperItemActive': 'swiperItem'}}">
          <image mode="aspectFill" src='{{item.img}}' class="imageItem {{currentIndex == index ? 'active': ''}}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 热门推荐 -->
  <view class="hot">
    <view class="tuijian">
      <image size="10" src="/assets/tabs/月亮.png" class="moon"></image>
      <text class="hot_text">热门推荐</text>
    </view>
    <view class="content">
      <van-grid column-num="4" square>
        <van-grid-item icon="/assets/tabs/成长.png" text="自我成长" url="" />
        <van-grid-item icon="/assets/tabs/情绪.png" text="情绪管理" />
        <van-grid-item icon="/assets/tabs/人际网.png" text="人际沟通" />
        <van-grid-item icon="/assets/tabs/恋爱.png" text="恋爱婚姻" />
        <van-grid-item icon="/assets/tabs/职场.png" text="职场管理" />
        <van-grid-item icon="/assets/tabs/亲子.png" text="亲子家庭" />
        <van-grid-item icon="/assets/tabs/科普.png" text="心理科普" />
        <van-grid-item icon="/assets/tabs/讲座.png" text="课程讲座" />
      </van-grid>
    </view>
  </view>
  <!-- 播放列表 -->
  <view class="radio">
    <view class="radio_item" wx:for="{{slides}}">
      <view class="img" icon="/assets/tabs/成长.png">
        <image class="im" src="http://www.icosky.com/icon/png/Media/Play%20Stop%20Pause/Play%20Normal.png" />
        <image class="" src="{{item.cover}}"></image>
      </view>
      <text class="">{{item.title}}</text>
    </view>
  </view>
  <!-- 精选推荐 -->
  <view class="found">
    <view class="caption">
      <image src="/assets/tabs/星星.png" />
      <text class="">精选推荐</text>
    </view>
    <van-cell-group class="found_fo">
      <van-cell class="found_item" use-label-slot wx:for="{{founds}}" wx:for-item="item" wx:key="id">
        <!-- 图片 -->
        <view slot="icon" class="found_img">
          <image class="icon_img" src="{{item.cover}}" />
        </view>
        <!-- 标题 -->
        <view slot="title" class="">
          <image class="pic" src="/assets/tabs/旗帜.png"></image>
          <view class="found_title">{{item.title}}</view>
        </view>
      </van-cell>
    </van-cell-group>
  </view>
  <!-- 返回顶部 -->
  <view>
    <image src="/assets/tabs/挥手小绿人.png" class="goTop" bindtap="goTop"></image>
  </view>
</view>