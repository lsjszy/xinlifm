.search {
  height: 80rpx;
  display: flex;
  margin: 0 0 0 22rpx;
  position: relative;
}
.search .search_img {
  margin: 35rpx 0 0 18rpx;
}
.search input {
  position: absolute;
  height: 70rpx;
  width: 650rpx;
  padding-left: 60rpx;
  border-radius: 40rpx;
  border: 1px solid #7e7c7c;
  margin-top: 20rpx;
}
.search .clear {
  margin: 32rpx 0 0 585rpx;
}
.container {
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .swiperItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: unset;
  z-index: 0.5;
}
.container .swiperItemActive {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: unset;
  z-index: 1;
}
.container .imageItem {
  height: 300rpx;
  width: 530rpx;
  border-radius: 10rpx;
  margin: 20rpx 0rpx;
  /* opacity: 0.5; */
  border: 3px double rgba(44, 44, 44, 0.3);
  box-sizing: border-box;
}
.container .active {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
  /* opacity: 1; */
}
.hot .tuijian {
  margin: 10rpx 0 17rpx 300rpx;
}
.hot .tuijian .moon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 0 -6rpx 0;
}
.hot .tuijian .hot_text {
  font-size: 45rpx;
  color: #0f0f0f;
  margin: 0 0 25rpx 0;
}
.hot .content .van-grid-item {
  border: 3px double rgba(128, 190, 226, 0.3);
}
.found {
  margin: 60rpx 0 0 0;
}
.found .bolangxian {
  border: 0;
  height: 1px;
  background-image: linear-gradient(to right, rgba(41, 39, 39, 0), rgba(143, 192, 192, 0.75), rgba(32, 31, 31, 0));
}
.found .caption {
  margin: 10rpx 0 17rpx 300rpx;
  font-size: 40rpx;
}
.found .caption image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 0 -6rpx 0;
}
.found .van-cell {
  width: 94%;
  margin: 10rpx 0 0 20rpx;
  border-radius: 20rpx;
  border-bottom: 5px double rgba(148, 214, 226, 0.3);
}
.found .van-cell .found_img .icon_img {
  box-sizing: border-box;
  border: 2px solid rgba(175, 175, 175, 0.3);
  border-radius: 10rpx;
  width: 220rpx;
  height: 160rpx;
  margin: 0 6rpx -12rpx -4rpx;
}
.found .van-cell .found_title {
  height: 160rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  color: #333;
  font-size: 26rpx;
  padding: 33rpx 0 0 11rpx;
}
.found .van-cell .pic {
  width: 160rpx;
  height: 200rpx;
  position: absolute;
  margin: 0 0 0 300rpx;
  z-index: 1;
}
.radio {
  background-size: 100% 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10rpx 0 0 30rpx;
}
.radio .radio_item {
  width: 45%;
  margin: 23rpx 23rpx 0 10rpx;
  border-color: #c4dda7;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.radio .radio_item image {
  width: 260rpx;
  height: 200rpx;
  margin: 23rpx 23rpx 0 32rpx;
  border-radius: 20rpx;
}
.radio .radio_item .im {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  margin: 32rpx 0 0 36rpx;
}
.radio .radio_item text {
  color: #5fa092;
  font-size: 26rpx;
  padding: 5rpx;
  border-radius: 15rpx;
}
/* 返回顶部 */
.goTop {
  height: 90rpx;
  width: 90rpx;
  position: fixed;
  bottom: 80rpx;
  right: 30rpx;
  z-index: 10;
}
